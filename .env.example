# OptimusSim Configuration
# Copy this file to .env and fill in your values

# ============================================
# OpenAI API Configuration
# ============================================

# API Type: "openai" or "azure"
API_TYPE=openai

# For OpenAI API
OPENAI_API_KEY=your-openai-api-key-here

# For Azure OpenAI Service
# AZURE_OPENAI_KEY=your-azure-openai-key-here
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com

# ============================================
# TinyTroupe Configuration
# ============================================

# Model Configuration
TINYTROUPE_MODEL=gpt-4.1-mini
TINYTROUPE_MAX_TOKENS=32000
TINYTROUPE_TEMPERATURE=1.5

# Caching (set to True to cache API calls and reduce costs)
TINYTROUPE_CACHE_API_CALLS=False

# ============================================
# Application Configuration
# ============================================

# Debug Mode (set to True for development)
DEBUG=False

# CORS Origins (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ============================================
# Storage Configuration
# ============================================

# Directories for storing data
UPLOAD_DIR=uploads
AGENTS_DIR=agents
SIMULATIONS_DIR=simulations
